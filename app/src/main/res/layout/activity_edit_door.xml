<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Screen title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Door"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- EditText for entering the door code -->
    <EditText
        android:id="@+id/etEditCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the code of the door"
        android:inputType="text"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"/>

    <!-- EditText for entering the location of the door -->
    <EditText
        android:id="@+id/etEditLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter location of the door"
        android:inputType="text"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"/>

    <!-- Button to save changes -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="16sp"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"/>

</LinearLayout>
